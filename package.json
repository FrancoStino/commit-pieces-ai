{
  "name": "commit-pieces-ai",
  "displayName": "Commit Pieces AI",
  "description": "Generate commit with Pieces for Developers",
  "publisher": "DavideLadisa",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "AI"
  ],
  "icon": "assets/icon.png",
  "license": "MIT",
  "keywords": [
    "code",
    "assistant",
    "ai",
    "llm",
    "commits",
    "pieces",
    "commit",
    "pieces for developers"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commit-pieces-ai.createCommit",
        "title": "Run Commit Pieces",
        "icon": "$(sparkle)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "commit-pieces-ai.createCommit",
          "group": "navigation"
        }
      ]
    }
  },
  "configuration": [
    {
      "title": "Model Pieces AI",
      "properties": {
        "commit-pieces-ai.model": {
          "type": "string",
          "enum": [
            "gpt-3.5-turbo",
            "gemini-1.5-pro"
          ],
          "default": "gpt-3.5-turbo",
          "description": "Model to use for the commit creations.",
          "order": 1
        },
        "commit-pieces-ai.useEmojis": {
          "type": "boolean",
          "default": false,
          "description": "Enable or disable the use of emojis in commit messages.",
          "order": 2
        },
        "commit-pieces-ai.commitEmojis": {
          "type": "object",
          "default": {
            "feat": "‚ú®",
            "fix": "üêõ",
            "docs": "üìù",
            "style": "üíé",
            "refactor": "‚ôªÔ∏è",
            "test": "üß™",
            "chore": "üì¶",
            "revert": "‚è™"
          },
          "description": "Map commit types to emojis. Only used if emojis are enabled.",
          "order": 3
        },
        "commit-pieces-ai.custom.summaryPrompt": {
          "type": "string",
          "default": "",
          "description": "Custom prompt for summarize the git diff.",
          "order": 4
        },
        "commit-pieces-ai.custom.summaryTemperature": {
          "type": "number",
          "default": 0.8,
          "minimum": 0,
          "maximum": 2,
          "description": "Custom temperature for summarize the git diff. (between 0 and 2)",
          "order": 5
        },
        "commit-pieces-ai.custom.commitPrompt": {
          "type": "string",
          "default": "",
          "description": "Custom prompt for commit message.",
          "order": 6
        },
        "commit-pieces-ai.custom.commitTemperature": {
          "type": "number",
          "default": 0.2,
          "minimum": 0,
          "maximum": 1,
          "description": "Custom temperature for commit message. (greater = more creative)",
          "order": 7
        }
      }
    }
  ],
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "22.1.0",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.8.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@pieces.app/pieces-os-client": "^4.0.0"
  },
  "bugs": {
    "url": "https://github.com/FrancoStino/commit-pieces-ai/issues",
    "email": "info@davideladisa.it"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FrancoStino/commit-pieces-ai.git"
  },
  "homepage": "https://github.com/FrancoStino/commit-pieces-ai/blob/main/README.md"
}
